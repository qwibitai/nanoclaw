{
  "name": "omniclaw",
  "version": "1.0.0",
  "description": "OmniClaw - Personal Claude assistant from the Omni ecosystem. Fork of NanoClaw.",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "auth": "bun src/whatsapp-auth.ts",
    "typecheck": "bunx tsc --noEmit",
    "format": "bunx prettier --write \"src/**/*.ts\"",
    "format:check": "bunx prettier --check \"src/**/*.ts\"",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@daytonaio/sdk": "^0.142.0",
    "@effect/schema": "^0.75.5",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "cron-parser": "^5.5.0",
    "discord.js": "^14.16.0",
    "effect": "^3.19.17",
    "grammy": "^1.40.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/qrcode-terminal": "^0.12.2",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0",
    "vitest": "^2.1.8"
  }
}
