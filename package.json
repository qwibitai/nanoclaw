{
  "name": "dotclaw",
  "version": "1.0.0",
  "description": "Personal OpenRouter-based assistant. Lightweight, secure, customizable.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "init": "node scripts/init.js",
    "bootstrap": "node scripts/bootstrap.js",
    "configure": "node scripts/configure.js",
    "doctor": "node scripts/doctor.js",
    "autotune": "node scripts/autotune.js",
    "lint": "eslint . --max-warnings=0",
    "test": "npm run build && node --test test/**/*.test.js && npm run test:agent-runner",
    "test:agent-runner": "node scripts/test-agent-runner.js"
  },
  "dependencies": {
    "@dotsetlabs/autotune": "^1.0.0",
    "better-sqlite3": "^11.8.1",
    "cron-parser": "^5.5.0",
    "dotenv": "^17.2.3",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.3",
    "telegraf": "^4.16.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.0",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.23.0"
  },
  "engines": {
    "node": ">=20"
  }
}
