# Anthropic API Key (required)
ANTHROPIC_API_KEY=your-api-key-here

# GitHub Token for gh CLI (optional, for PR creation)
GH_TOKEN=your-github-token

# Sonos Integration (optional)
# Control mode: 'local' (default, LAN) or 'cloud' (OAuth API)
SONOS_CONTROL_MODE=local

# Local mode (LAN control)
SONOS_SPEAKER_IP=192.168.x.x
SONOS_TTS_ENDPOINT=https://api.streamelements.com/kappa/v2/speech

# Cloud mode (OAuth API - optional, for remote control)
# Get these from https://integration.sonos.com after OAuth setup
SONOS_CLIENT_ID=your-client-id
SONOS_CLIENT_SECRET=your-client-secret
SONOS_REFRESH_TOKEN=your-refresh-token
SONOS_HOUSEHOLD_ID=your-household-id
# Optional: Initial access token (will auto-refresh if refresh token provided)
SONOS_ACCESS_TOKEN=your-access-token
