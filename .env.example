# NanoClaw Environment Configuration
# Copy this file to .env and fill in your values

# Required: Anthropic API key
ANTHROPIC_API_KEY=sk-ant-...

# Assistant name (messages starting with this name trigger the agent)
ASSISTANT_NAME=Andy

# Container settings
CONTAINER_IMAGE=ghcr.io/tiagojmartins/nanoclaw-agent:latest
CONTAINER_RUNTIME=docker
CONTAINER_TIMEOUT=300000

# Timezone for scheduled tasks
TZ=Europe/Lisbon

# Pushover notifications (optional)
# Get credentials at https://pushover.net
PUSHOVER_USER_KEY=
PUSHOVER_APP_TOKEN=
PUSHOVER_DEVICE=

# iCloud Calendar integration (optional)
# Use an app-specific password: https://support.apple.com/en-us/102654
ICLOUD_USERNAME=
ICLOUD_APP_PASSWORD=
# Comma-separated calendar names to enable (leave empty for all)
# Use Name::urlFragment to disambiguate duplicates
ICLOUD_CALENDARS=

# Telegram bot (optional)
# Create via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
# Your Telegram user ID (only this user can interact with the bot)
TELEGRAM_OWNER_ID=
# Bot username (without @) for deep links in Pushover notifications
TELEGRAM_BOT_USERNAME=

# Email channel (optional)
EMAIL_ENABLED=false
EMAIL_IMAP_HOST=imap.fastmail.com
EMAIL_IMAP_PORT=993
EMAIL_USER=
EMAIL_PASS=
EMAIL_ADDRESS=
EMAIL_FOLDERS=INBOX
EMAIL_PROCESSED_FOLDER=INBOX.NanoClaw.Processed
EMAIL_DRAFTS_FOLDER=Drafts
EMAIL_FROM_NAME=
