{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "lib/**/*.ts",
    "scripts/**/*.ts",
    "templates/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}